                  "key": "semesterId",
                  "value": "1",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "level",
                  "value": "freshman",
                  "disabled": true
                },
